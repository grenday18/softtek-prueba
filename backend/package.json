{
  "name": "backend",
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript template",
  "main": "serverless.yml",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "install:merged-layer": "cd ./layers/merged-layer/ && yarn install && yarn build",
    "refresh-layers": "bash ./refresh-layers.sh",
    "dev": "serverless offline",
    "deploy:dev": "yarn install:merged-layer && serverless deploy --stage dev",
    "remove:dev": "serverless remove --stage dev",
    "deploy:prod": "yarn install:merged-layer && serverless deploy --stage prod",
    "remove:prod": "serverless remove --stage prod"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.134",
    "esbuild": "^0.20.1",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.3",
    "serverless-plugin-typescript": "^2.1.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --ext .ts --max-warnings=0"
    ]
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT"
}
