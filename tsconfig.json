{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@layer": ["./layers/nodejs/dist"],
      "@core/*": ["./src/core/*"],
      "@utils": ["./src/utils"],
      "@services": ["./src/services"],
      "@src/*": ["./src/*"]
    },
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*.ts", 
    "layers/**/*.ts", 
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}